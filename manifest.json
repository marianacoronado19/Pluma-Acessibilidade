{
  "manifest_version": 3,
  "name": "Pluma - Assistente de Acessibilidade!",
  "version": "1.0",
  "description": "Uma extensão de navegador que adiciona funcionalidades de acessibilidade e personalização a qualquer site visitado pelo usuário (!! Com excessão de alguns sites da Google !!). Conte com a Bru, sua guia amigável, que pode te ajudar a tornar a navegação na web mais inclusiva e adaptada às suas necessidades.",

  "options_page": "pages/configs.html",

  "background": {
    "service_worker": "background.js"
  },

  "action":{
    "default_popup": "pages/redirect.html",
    "default_icon": {
      "16": "images/logoPluma/icon-16.png",
      "48": "images/logoPluma/icon-48.png",
      "128": "images/logoPluma/icon-128.png"
    },
    "default_title": "Pluma - Assistente de Acessibilidade!"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tts",
    "tabs",
    "commands"
  ],

  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/"
  ],

  "commands":{
    "toggle-high-contrast":{
      "suggested_key":{
        "default":"Alt+C"
      },
      "description":"Ativar/Desativar Modo de Alto Contraste"
    },
    "open-config":{
      "suggested_key":{
        "default":"Alt + A"
      },
      "description":"Abrir Configurações do Pluma"
    },
    "stop-tts":{
      "suggested_key":{
        "default":"Ctrl+Shift+X"
      },
      "description":"Parar Leitura em Voz Alta"
    },
    "start-tts":{
      "suggested_key":{
        "default":"Ctrl+Shift+L"
      },
      "description":"Iniciar/Pausar Leitura em Voz Alta"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://127.0.0.1/javascript/*",
        "*://127.0.0.1/pages/*",
        "*://127.0.0.1/stylesheets/*"
      ],
      "js": ["content.js"],
      "css": [
        "stylesheets/main.css",
        "stylesheets/accessibility.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "pages/*.html",
        "stylesheets/*",
        "js/*"
    ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
        "16": "images/logoPluma/icon-16.png",
        "32": "images/logoPluma/icon-32.png",
        "48": "images/logoPluma/icon-48.png",
        "128": "images/logoPluma/icon-128.png"
    }
}